@model SignInViewModel
@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>WasteRecords | Sign in</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/lib/fontawesome-free/css/all.min.css" />
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/css/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <!-- /.login-logo -->
        <div class="card" style="border-radius:25px">
            <div class="card-body login-card-body" style="border-radius:25px">
                <p class="login-box-msg"><strong style="font-size:xx-large">Waste Records Sign In</strong> </p>

                <form asp-controller="Home" asp-action="SignIn" id="frm" method="post">
                    <div class="input-group mb-3">
                        <input asp-for="Email" type="email" id="eMail" class="form-control" placeholder="Email">
                        @*<span asp-validation-for="Email" class="text-danger"></span>*@
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                        @*<span asp-validation-for="Password" class="text-danger"></span>*@
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-top:10px">
                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block" style="background-color: #6c757d;border-color: #6c757d">Giriş yap</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>

    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/js/adminlte.min.js"></script>
    <script src="~/js/SweetAlert.js"></script>
    <script src="~/js/site.js"></script>
    @if(TempData["status"] != null)
    {
        @if (TempData["status"].ToString() != "success")
        {
            <script>
                SweetAlert('@TempData["status"]', '', '@TempData["message"]', '')
            </script>
        }   
    }
</body>
</html>

